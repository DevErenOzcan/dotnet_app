@model webapp.Models.User

<div class="row justify-content-center align-items-center" style="min-height: 70vh;">
    <div class="col-md-5 col-lg-4">
        <div class="card shadow-lg border-0">
            <div class="card-body p-5">
                <div class="text-center mb-4">
                    <i class="bi bi-shield-lock-fill text-primary" style="font-size: 3rem;"></i>
                    <h2 class="fw-bold mt-3">Hoş Geldiniz</h2>
                    <p class="text-muted">Hesabınıza giriş yapın</p>
                </div>

                <form asp-action="Login" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Username" class="form-control" placeholder="Kullanıcı Adı" required />
                        <label asp-for="Username">Kullanıcı Adı</label>
                    </div>

                    <div class="form-floating mb-4">
                        <input asp-for="Password" type="password" class="form-control" placeholder="Şifre" required />
                        <label asp-for="Password">Şifre</label>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">Giriş Yap</button>
                    </div>

                    <div class="text-center mt-4">
                        <span class="text-muted">Hesabınız yok mu?</span>
                        <a asp-action="Register" class="fw-bold ms-1">Hemen Kayıt Ol</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>